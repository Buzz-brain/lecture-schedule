    <script>
        // Get the username and role from localStorage
const username = localStorage.getItem('username');
const role = localStorage.getItem('role');

// Check if the username and role are not null
if (username !== null && role !== null) {
  // Display the username and role on the dashboard
  document.getElementById('username-display').innerHTML = `Welcome, ${username}! ( ${role} )`;
} else {
  // If the username and role are null, redirect to the login page
  window.location.href = '/login';
}

// Logout button event listener
document.getElementById('logout-button').addEventListener('click', () => {
  // Clear the localStorage
  localStorage.clear();
  // Redirect to the login page
  window.location.href = '/login';
});



    </script>
